<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="https://media.licdn.com/dms/image/v2/D4E03AQE-fCHRPMVPcA/profile-displayphoto-scale_200_200/B4EZmjlHQuKwAY-/0/1759386039880?e=1762992000&v=beta&t=o5J9W0Mq7f4e81VrMye5h0-44HYKrdE-XvXpbGGWP_M"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/sebastian-uriel-becerra-durand-17544432b"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
